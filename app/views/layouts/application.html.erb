<!DOCTYPE html>
<html>
  <head>
    <title>PostooCommentoo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="container col-12 col-sm-10 col-md-7 col-lg-6 col-xl-5">
    <% if flash[:notice] %>
      <div class="p-1 mb-0 alert alert-danger alert-dismissible fade show" role="alert">
        <span class="bi bi-exclamation-triangle-fill"></span>
        <%= flash[:notice] %>
        <button class="p-2 btn btn-sm btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>
    <div class="row justify-content-between">
      <%= link_to '', root_path, class: "col-2 bi bi-arrow-left-circle fs-3" %>
      <% if logged_in? %>
        <span class="col-10 text-end">
          <%= @_current_user.name %>
          <%= image_tag(@_current_user.picture, width: "46", alt: "User profile picture") %>
          <%= link_to '', logout_path, data: { turbo_method: :delete } , class: "fs-5 bi bi-box-arrow-right text-secondary" %>
        </span>
      <% else %>
        <div class="col-10 text-end align-self-center">
          <%= render 'logins/form' %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
